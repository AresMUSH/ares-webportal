<h1>{{model.heading}} Source</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Other Versions
    </div>

<ol>
    {{#each model.versions as |v|}}
    <li>
     {{#if (eq v.id model.version_id)}}
     <i class="far fa-dot-circle fa-fw" aria-hidden="true"></i>
     {{else}}
     <i class="far fa-circle fa-fw"></i>
     {{/if}}
     {{#link-to 'wiki-source' model.page_id v.id}}{{v.created}} ({{v.author}}){{/link-to}}
     </li>
    {{/each}}
</ol>

</div>

<div class="panel panel-default">
    <div class="panel panel-heading">
        Selected Version
    </div>
    <div class="panel panel-body">
        <pre>
        {{model.text}}
        </pre>
    </div>
</div>


{{#if model.diff}}

<div class="panel panel-default">
    <div class="panel panel-heading">
        Compared to Previous Version
        &nbsp;
        <a data-toggle="collapse" href="#compare"><button class="btn btn-default">Show/Hide</button></a>
        
    </div>
    <div id="compare" class="panel-collapse collapse">
        <div class="panel panel-body">
            {{{model.diff}}}
        </div>
    </div>
</div>

{{/if}}

<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">

  {{#if can_edit}}

        <button class="btn btn-default">Revert to This Version</button>
        
  {{/if}}
        
  </div>
  </div>
</div>

{{#link-to 'wiki-page' model.name}}<i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Page{{/link-to}}