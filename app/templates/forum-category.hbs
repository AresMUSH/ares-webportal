{{title model.name}}
<h1>{{model.name}}</h1>

<p>{{model.description}}</p>

<div class="row">
    <div class="col col-xs-12">

<p>{{#link-to 'forum'}}<i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Forums{{/link-to}}</p>

        <div class="pull-right">
 
          <button {{action 'catchup'}} class="btn btn-default">Mark All Read</button>
          <button {{action 'nextUnread'}} class="btn btn-default">Next Unread</button>
 
          {{#if model.can_post}}
          {{#link-to 'forum-create-post' model.id class='btn btn-primary'}}Add Post{{/link-to}}
          {{/if}}
          
          
  </div>
  </div>
</div>

{{forum-post-list posts=model.posts}}

{{outlet}}
