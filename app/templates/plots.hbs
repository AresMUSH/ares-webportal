{{title 'Plots'}}
<h1>Plots</h1>

<p>Plots are a way to group related scenes.</p>

{{#if isApproved}}

<div class="row">
    
    <div class="col pull-right">
        {{#link-to 'plot-create' class="btn btn-primary"}}Create Plot{{/link-to}}
    </div>
    
</div>

{{/if}}

<table class="table table-striped">


<thead>
    <tr>
        <th class="col-xs-3">Plot</th>
        <th class="col-xs-2">Storyteller</th>
        <th class="col-xs-3">Dates</th>
        <th class="col-xs-4">Summary</th>
    </tr>
</thead>

<tbody>

{{#each model as |plot|}}
  {{#if (not plot.completed) }}
    <tr>
        <td>
        {{#link-to 'plot' plot.id}}{{plot.title}}{{/link-to}}
        </td>
        <td>
        {{#link-to 'char' plot.storyteller.name}}{{plot.storyteller.name}}{{/link-to}}
        </td>
        <td>
        {{plot.start_date}} - {{plot.end_date}}
        </td>        
        <td>
            {{{ansi-format text=plot.summary}}}
            {{#if plot.content_warning}}
            {{content-warning-tag warning=plot.content_warning}}
            {{/if}}
            
        </td>
    </tr>
  {{/if}}
{{/each}}

</tbody>
</table>

<h2>Completed Plots</h2>

<ul>
{{#each model as |plot|}}
  {{#if plot.completed }}
    <li>
        {{#link-to 'plot' plot.id}}{{plot.title}}{{/link-to}}
        
            {{{ansi-format text=plot.summary}}}
    </li>
  {{/if}}
{{/each}}
</ul>