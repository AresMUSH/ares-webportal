{{page-title "Create Channel"}}
<h1>Create Channel</h1>

  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="name" class="col-form-label">Name:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" size={{25}} id="name" @enter={{action "save"}} @value={{this.name}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="desc" class="col-form-label">Description:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" size={{25}} id="desc" @enter={{action "save"}} @value={{this.desc}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="color" class="col-form-label">Color:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" size={{25}} id="color" @enter={{action "save"}} @value={{this.color}} />
    </div> 
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Can Join:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{this.can_join}} @options={{this.model.roles}} @onChange={{action "joinRolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Can Talk:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple  @selected={{this.can_talk}} @options={{this.model.roles}} @onChange={{action "talkRolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  

<div class="action-buttons">
        <LinkTo @route="channels-manage" class="btn btn-secondary">Cancel</LinkTo>  
        <button {{action 'save'}} class="btn btn-primary">Save</button>
</div>
      
<FlashMessages />
