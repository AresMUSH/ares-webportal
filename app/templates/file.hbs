<h1>{{model.name}}</h1>

<img src="/uploads/{{model.path}}" class="image-container file-image" />


<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
          {{#link-to 'files' class="btn btn-default"}}Back to Files{{/link-to}}

          {{#if isAdmin}}
              <button {{action (mut confirmDelete) true}} class="btn btn-warning">Delete</button>
          {{/if}}


          {{#if isApproved}}
              {{#link-to 'file-edit' (query-params path=model.path name=model.name) class="btn btn-primary"}}Edit{{/link-to}}
          {{/if}}
         </div>
  </div>
</div>
{{flash-messages}}

{{file-uploader folder=model.folder file=model.name}}


{{#bs-modal-simple
    title="Confirm Delete"
    closeTitle="Cancel"
    submitTitle="Confirm"
    size=null
    fade=false
    open=confirmDelete
    onSubmit=(action "delete")
    onHide=(action (mut confirmDelete) null)}}
    You're about to delete file {{model.name}}. This cannot be undone.  Are you sure?
  {{/bs-modal-simple}}
  
{{outlet}}