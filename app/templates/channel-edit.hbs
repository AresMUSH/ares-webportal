{{page-title "Edit Channel"}}
<h1>Edit Channel</h1>

  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="name" class="col-form-label">Name:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="name" @enter={{action "save"}} @value={{model.channel.name}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="desc" class="col-form-label">Description:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="desc" @enter={{action "save"}} @value={{model.channel.desc}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="color" class="col-form-label">Color:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="color" @enter={{action "save"}} @value={{model.channel.color}} />
    </div> 
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Can Join:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{model.channel.can_join}} @options={{model.roles}} @onChange={{action "joinRolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Can Talk:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{model.channel.can_talk}} @options={{model.roles}} @onChange={{action "talkRolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  

<div class="pull-right">
        <p> <LinkTo @route="channels-manage" class="btn btn-default">Cancel</LinkTo>  
        <button {{action 'save'}} class="btn btn-primary">Save</button> </p>
</div>
      
<FlashMessages />
