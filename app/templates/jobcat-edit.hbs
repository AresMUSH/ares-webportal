{{page-title "Edit Job Category"}}
<h1>Edit Job Category</h1>

  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="name" class="col-form-label">Name:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="name" @enter={{action "save"}} @value={{model.category.name}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="color" class="col-form-label">Color:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="color" @enter={{action "save"}} @value={{model.category.color}} />
        <div class="hint">Web portal colors are determined by custom styling for job-category-NAME.</div>
    </div> 
  </div>  
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Roles:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{model.category.roles}} @options={{model.roles}} @onChange={{action "rolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Template:</b>
    </div>

    <div class="col-sm-9">
      <Textarea @value={{model.category.template}} @cols="80" @rows=5 @class="job-template-editor" />
    </div>
  </div>

<div class="pull-right">
        <p> <LinkTo @route="jobcat-manage" class="btn btn-default">Cancel</LinkTo>  
        <button {{action 'save'}} class="btn btn-primary">Save</button> </p>
</div>
      
<FlashMessages />
