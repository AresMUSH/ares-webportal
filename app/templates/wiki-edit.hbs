{{page-title this.model.heading}}
<h1>{{this.model.heading}}</h1>

     <div class="form-group row">
      <div class="col-sm-3">
        <label for="title" class="col-xs-2 col-form-label">Title:</label>
      </div>
      <div class="col-sm-9">
        <Input @type="text" size={{25}} id="title" @enter={{action "save"}} @value={{this.model.title}} />
      </div> 
    </div>
    
{{#if this.model.can_change_name}}
    
     <div class="form-group row">
      <div class="col-sm-3">
        <label for="name" class="col-xs-2 col-form-label">Page Name:</label>
      </div>
      <div class="col-sm-9">
        <Input @type="text" size={{25}} id="name" @enter={{action "save"}} @value={{this.model.name}} />
      </div> 
    </div>
    
{{/if}}

    
     <div class="form-group row">
      <div class="col-sm-3">
         <label for="tags" class="col-xs-2 col-form-label">Tags:</label>
      </div>
      <div class="col-sm-9">
        <Input @type="text" size={{25}} id="tags" @enter={{action "save"}} @value={{this.model.tags}} />
      </div> 
    </div>

   
    <MarkdownEditor @text={{this.model.text}} @rows={{30}} />
  
    <div class="action-buttons">
      {{#if this.model.can_do_minor_edits}}
      <Input @type="checkbox" @checked={{this.minorEdit}} /> Minor Edit
      {{/if}}
      <button class="btn btn-secondary" {{action 'cancel'}}>Cancel</button>
      <button class="btn btn-primary" {{action 'save'}}>Save</button>
    </div>
    
    <FlashMessages />
    
    {{#if this.preview}}
    <div class="card card-default">
        <div class="card-heading">
            Preview
        </div>
        <div class="card-body">
            {{{this.preview}}}
        </div>
    </div>
    {{/if}}
    

<hr>
