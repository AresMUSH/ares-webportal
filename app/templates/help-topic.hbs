{{title model.name}}
<div id="help" class="help-topic">
    {{{ansi-format text=model.help}}}
</div>

<hr>
<p>{{#link-to 'help'}}<i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Help{{/link-to}}</p>


{{#if model.can_manage}}

<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
        {{#if model.is_override}}
        <button {{action (mut confirmRestore) true}} class="btn btn-warning">Restore Default</button>
        {{/if}}
        {{#link-to 'help-override' model.key class="btn btn-default"}}Customize{{/link-to}}
    </div>
    </div>
</div>


{{flash-messages}}

{{#bs-modal-simple
    title="Confirm Restore"
    closeTitle="Cancel"
    submitTitle="Confirm"
    size=null
    fade=false
    open=confirmRestore
    onSubmit=(action "restore")
    onHide=(action (mut confirmRestore) null)}}
    This will remove your custom help file and restore the default. This cannot be undone.  Are you sure?
  {{/bs-modal-simple}}
  
{{/if}}

{{outlet}}  