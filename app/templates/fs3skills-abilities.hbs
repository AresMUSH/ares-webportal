{{title 'FS3 Abilities'}}
<h1>FS3 Abilities</h1>

<h2>Attributes</h2>

<AnsiFormat @text={{model.attrs_blurb}} />

<table class="table table-striped">

<thead>
    <th>Attribute</th>
    <th>Description</th>
</thead>

<tbody>
{{#each model.attrs as |attr| }}
<tr>
    <td>{{attr.name}}</td> 
    <td>{{attr.description}}</td>
</tr>
{{/each}}
</tbody>
</table>

<h2>Action Skills</h2>

<AnsiFormat @text={{model.action_blurb}} />

<table class="table table-striped">

<thead>
    <th>Skill</th>
    <th>Linked Attribute</th>
    <th>Description</th>
</thead>

<tbody>
{{#each model.action_skills as |ability| }}
<tr>
    <td>{{ability.name}}</td> 
    <td>{{ability.linked_attr}}</td> 
    <td>
        {{ability.description}}
        {{#if ability.specialties}}
        <br> <b>Specialty Required:</b> {{ability.specialties}}
        {{/if}}
    
    </td>
</tr>
{{/each}}
</tbody>
</table>


