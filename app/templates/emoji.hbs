<a name="quick"></a>

<h2>Quickref</h2>

<div class="row">

{{#each this.model.aliases as |emoji|}}
<div class="col col-4">
  <div class="col col-2 emoji-example">
  {{emoji.display}}
  </div>
  <div class="col col-10">
  :{{emoji.name}}:
  </div>
</div>
{{/each}}

</div>


<a name="emoji"></a>

<h2>Emoji</h2>

<div class="row">

{{#each this.model.emoji as |emoji|}}
<div class="col col-4">
  <div class="col col-2 emoji-example">
  {{emoji.display}}
  </div>
  <div class="col col-10">
  :{{emoji.name}}:
  </div>
</div>
{{/each}}

</div>


<a name="smileys"></a>

<h2>Smileys</h2>

<div class="row">

{{#each this.model.smileys as |emoji|}}
<div class="col col-4">
  <div class="col col-3 emoji-example">
    <code>{{{emoji.name}}}</code>
  </div>
  <div class="col col-9 emoji-example">
  {{emoji.display}} 
  </div>
</div>
{{/each}}

</div>

{{else}}
<p>This game does not have emoji enabled.  :sadface:</p>
{{/if}}
