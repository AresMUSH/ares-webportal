{{page-title model.creature.name}}
<h1>Edit {{model.creature.name}} </h1>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#general">General</a></li>
        <li><a data-toggle="tab" href="#traits">Traits</a></li>
        <li><a data-toggle="tab" href="#society">Society</a></li>
        <li><a data-toggle="tab" href="#events">Plots & Events</a></li>
        <li><a data-toggle="tab" href="#images">Images</a></li>
    </ul>



    <div class="tab-content">

      <div id="general" class="tab-pane fade in active">
        <div class="form-group row">
          <div class="col-sm-3">
            <b>Name</b>
          </div>

          <div class="col-sm-9">
            <p><Input @type="text" @size={{25}} @value={{model.creature.name}}  /></p>
          </div>
          <div class="col-sm-3">
            <b>GMs</b>
          </div>

          <div class="col-sm-9">
            <p><PowerSelectMultiple @selected={{model.creature.gms}} @options={{model.characters}} @searchEnabled=true @searchField="name"  @onChange={{action "gmsChanged"}} as |char|>
              {{char.name}}
            </PowerSelectMultiple></p>
          </div>

          <div class="col-sm-3">
            <b>Major School</b>
          </div>

          <div class="col-sm-9">
            <p><PowerSelect @selected={{model.creature.major_school}} @options={{model.schools}} @onChange={{action "majorschoolChanged"}} as |school|>
              {{school}}
            </PowerSelect></p>
          </div>

          <div class="col-sm-3">
            <b>Minor School</b>
          </div>

          <div class="col-sm-9">
            <p><PowerSelect @selected={{model.creature.minor_school}} @options={{model.schools}} @onChange={{action "minorschoolChanged"}} as |school|>
              {{school}}
            </PowerSelect></p>
          </div>

          <div class="col-sm-3">
            <b>Language(s):</b>
          </div>

          <div class="col-sm-9">
            <p><Input @type="text" @size={{25}} @value={{model.creature.language}}  /></p>
          </div>

          <div class="col-sm-3">
            <b>Portals</b>
          </div>

          <div class="col-sm-9">
            <p><PowerSelectMultiple @selected={{model.creature.portals}} @options={{model.portals}} @searchEnabled=true @searchField="name"  @onChange={{action "portalsChanged"}} as |portal|>
              {{portal.name}}
            </PowerSelectMultiple></p>
          </div>

          <div class="col-sm-3">
            <b>Also Found:</b>
          </div>

          <div class="col-sm-9">
            <p><Input @type="text" @size={{25}} @value={{model.creature.found}}  /></p>
          </div>

          <div class="col-sm-3">
            <b>Pinterest URL</b>
          </div>

          <div class="col-sm-9">
            <p><Input @type="text" @size={{25}} @value={{model.creature.pinterest}}  /></p>
          </div>

          <div class="col col-xs-3">
            <p><label>Sapient?</label>
              <Input @type="checkbox" @checked={{model.creature.sapient}} />
            </p>
          </div>

          <div class="col-sm-3">
            <b>Summary</b>
          </div>

          <div class="col-sm-9">
            <p><MarkdownEditor @text={{model.creature.edit_short_desc}}  @rows={{5}} /></p>
          </div>

        </div>
      </div>

      <div id="traits" class="tab-pane fade in">
        <b>Traits & Description</b>
        <MarkdownEditor @text={{model.creature.edit_traits}} />

        <b>Magical Abilities & Spells<</b>
        <MarkdownEditor @text={{model.creature.edit_magical_abilities}}/>
      </div>


      <div id="society" class="tab-pane fade in">
        <b>Society</b>
        <MarkdownEditor @text={{model.creature.edit_society}} />
      </div>



      <div id="events" class="tab-pane fade in">
        <div class="col-sm-3">
          <b>Plots</b>
        </div>

        <div class="col-sm-9">
          <PowerSelectMultiple @selected={{model.creature.plots}} @options={{model.plots}} @searchEnabled=true @searchField="name"  @onChange={{action "plotsChanged"}} as |plot|>
            {{plot.title}}
          </PowerSelectMultiple>
        </div>

        <b>Events</b>
        <MarkdownEditor @text={{model.creature.edit_events}} />
      </div>


      <div id="images" class="tab-pane fade in">

        <div class="form-group row">
            <div class="col-sm-3">
                    <b>Banner Image</b>
            </div>

            <div class="col-sm-9">
                <PowerSelect @selected={{model.creature.banner_image}} @allowClear={{true}} @searchField="name" @options={{model.creature.files}} @onChange={{action "bannerImageChanged"}} as |file|>
                {{file.name}}
                </PowerSelect>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-3">
                    <b>Image Gallery</b>
            </div>

            <div class="col-sm-9">

              <div class="profile-gallery-input">
              <Textarea @value={{model.creature.image_gallery}} @cols="80" @rows={{3}} />

                <p class="hint">List image files in the order you want them shown (<code>folder/file1.jpg /folder/file2.jpg</code> etc.), or leave this blank to just show all images from the creature's folder.</p>
                </div>

            </div>
        </div>

        <CreatureEditFiles @model={{model}} />
      </div>

    </div>



    <div class="row">
        <div class="col col-xs-12">
            <div class="pull-right">

                <p> {{#link-to 'creature' model.creature.id class="btn btn-default"}}Cancel{{/link-to}}
                    <button class="btn btn-primary" {{action 'save'}} >Save</button>
                </p>

            </div>
        {{flash-messages}}
        </div>
    </div>


{{outlet}}
