{{page-title 'Create Area'}}
<h1>Create Area</h1>

<div class="form-group row">
  <div class="col-sm-3">
      <label for="name" class="col-form-label">Name:</label>
  </div>
  <div class="col-sm-9">
      <Input @type="text" size={{25}} id="name" @enter={{action "save"}} @value={{this.name}} />
  </div> 
</div>

<div class="form-group row">
  <div class="col-sm-3">
      <label for="summary" class="col-form-label">Summary:</label>
  </div>
  <div class="col-sm-9">
      <MarkdownEditor @text={{this.summary}} />
  </div> 
</div>

<div class="form-group row">
  <div class="col-sm-3">
      <label for="summary" class="col-form-label">Description:</label>
  </div>
  <div class="col-sm-9">
      <MarkdownEditor @text={{this.description}} />
  </div> 
</div>


<div class="form-group row">
  <div class="col-sm-3">
      <label for="summary" class="col-form-label">Parent Area:</label>
  </div>
  <div class="col-sm-9">
      <PowerSelect @selected={{this.parentArea}}  @options={{this.model.areas}} @searchEnabled=true @searchField="name" @allowClear=true @onChange={{action "changeParent"}} as |area|>
         {{area.name}}
      </PowerSelect>
  </div> 
</div>


                             
<div class="action-buttons">
  <LinkTo @route="locations" class="btn btn-secondary">Cancel</LinkTo>
  <button {{action "save"}} class="btn btn-primary">Save</button>
</div>

<FlashMessages />

