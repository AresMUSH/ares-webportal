{{page-title 'Edit Event'}}
<h1>Edit Event</h1>


   <div class="form-group row">
    <div class="col-sm-3">
        <label for="title" class="col-form-label">Title:</label>
    </div>
    <div class="col-sm-9">
         <Input @type="text" @size={{25}} @id="title" @enter={{action "edit"}} @value={{model.title}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="date" class="col-form-label">Date:</label>
    </div>
    <div class="col-sm-9">
         <PikadayInput @onSelection={{action "changeDate"}} @value={{model.date}} @format={{model.date_entry_format}} /> 
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="startTime" class="col-form-label">Start Time:</label>
    </div>
    <div class="col-sm-9">
         <Input @type="text" @id="time" @enter={{action "edit"}} @value={{model.time}} />
         
         <div class="hint">Use <b>server time</b> in the same format as the server time.  The current server time is {{model.server_time}}.</div>
    </div> 
  </div>
  
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="warning" class="col-form-label">Content Warning:</label>
    </div>
    <div class="col-sm-9">
         <Input @type="text" @size={{25}} @id="content_warning" @enter={{action "edit"}} @value={{model.content_warning}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="tags" class="col-form-label">Tags:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="tags" @enter={{action "edit"}}  @value={{model.tags}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="warning" class="col-form-label">Description:</label>
    </div>
    <div class="col-sm-9">
         <MarkdownEditor @text={{model.description}} />
         
    </div> 
  </div>
  


<div class="pull-right">
  <LinkTo @route="event" @model={{model.id}} class="btn btn-default">Cancel</LinkTo>
  <button {{action "edit"}} class="btn btn-primary">Save</button>
</div>
<FlashMessages />
