{{title 'Edit Event'}}
<h1>Edit Event</h1>

<p><b>Title:</b></p>
<p>{{input type="text" size=50 id="title" enter="create" value=model.title}}</p>

<p><b>Date:</b></p>
<p>{{pikaday-input onSelection=(action 'changeDate') value=model.date format=model.date_entry_format}} </p>

<p><b>Start Time:</b></p>
<div class="hint">Use <b>server time</b> in standard format (e.g. either 1:30pm or 1330 depending on nationality.)</div>
<p>{{input type="text" id="time" enter="create" value=model.time }}</p>

<p><b>Description:</b></p>

{{markdown-editor text=model.description}}


{{#link-to 'event' model.id class="btn btn-default"}}Cancel{{/link-to}}
<button {{action "edit"}} class="btn btn-primary">Save</button>
{{flash-messages}}
