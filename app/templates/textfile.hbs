{{page-title this.model.file}}
<h1>Edit {{this.model.file}} Config</h1>

{{#if (eq this.model.file_type 'config')}}
    <YamlEditor @editorId="config" @text={{this.model.text}} rows={{30}} />
{{else if (eq this.model.file_type 'code')}}
  <AceEditor @editorId="codeEditor" @resetEditorCallback={{this.resetEditor}} @text={{this.model.text}} @mode="html_ruby" @editorChanged={{action "editorChanged"}} @lines={{30}} />
{{else}}
    <Textarea @value={{this.model.text}} cols={{80}} rows={{30}} class="code-editor" spellcheck="false" />
{{/if}}


<div class="action-buttons">
  {{#if this.isThemeMgr}}
    <LinkTo @route="home" class="btn btn-secondary">Cancel</LinkTo>
  {{else}}
    <LinkTo @route="setup" class="btn btn-secondary">Cancel</LinkTo>
  {{/if}}
    <button {{action 'save'}} class="btn btn-primary">Save</button>
</div>
        
<FlashMessages />

{{outlet}}
