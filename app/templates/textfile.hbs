{{page-title this.model.file}}
<h1>Edit {{this.model.file}} Config</h1>

{{#if (eq this.model.file_type 'config')}}
    <YamlEditor @editorId="config" @text={{this.model.text}} rows={{30}} />
{{else}}
    <Textarea value={{this.model.text}} cols={{80}} rows={{30}} class="code-editor" />
{{/if}}

<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
          {{#if isWikiMgr}}
            <LinkTo @route="home" class="btn btn-default">Cancel</LinkTo>
          {{else}}
            <LinkTo @route="setup" class="btn btn-default">Cancel</LinkTo>
          {{/if}}
            <button {{action 'save'}} class="btn btn-primary">Save</button>
        </div>
        
        <FlashMessages />
    </div>
</div>

{{outlet}}
