{{page-title "Create Category"}}
<h1>Create Category</h1>

  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="name" class="col-form-label">Name:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" size={{25}} id="name" @enter={{action "save"}} @value={{this.name}} />
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="desc" class="col-form-label">Description:</label>
    </div>
    <div class="col-sm-9">
        <Input @type="text" size={{25}} id="desc" @enter={{action "save"}} @value={{this.desc}} />
    </div> 
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Can Read:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{this.can_read}} @options={{this.model.roles}} @onChange={{action "readRolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-3">
      <b>Can Write:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{this.can_write}} @options={{this.model.roles}} @onChange={{action "writeRolesChanged"}} as |role|>
        {{role}}
      </PowerSelectMultiple>
      <div class="hint">Forums default to only allowing approved characters to post. If you want a forum where anyone can post, you must explicitly set the write role to 'everyone'.</div>
    </div>
  </div>
  

<div class="action-buttons">
  <LinkTo @route="forum-manage" class="btn btn-secondary">Cancel</LinkTo>  
  <button {{action 'save'}} class="btn btn-primary">Save</button>
</div>
      
<FlashMessages />
