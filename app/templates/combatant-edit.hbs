{{title 'Edit Combatant'}}
<h1>Edit Combatant {{model.name}}</h1>

<div class="form-group row">
    <div class="col-sm-3">
            <b>Action:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#power-select selected=model.action options=model.options.actions onchange=(action "actionChanged") as |act|}}
              {{act}}
            {{/power-select}}
            <br>
            <b>Action Args:</b> 
            {{tooltip-icon position='right' message='Enter targets or other options for your action, like Dummy/burst,called:head.' icon='fa fa-question-circle'}}
            {{input type="text" size=25 id="actionArgs" value=model.action_args}}
            
            
    </div>
 
</div>

<div class="form-group row">
    <div class="col-sm-3">
            <b>Team:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#power-select selected=model.team options=teams onchange=(action "teamChanged") as |team|}}
              {{team}}
            {{/power-select}}
            
    </div>
 
</div>

<div class="form-group row">
    <div class="col-sm-3">
            <b>Stance:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#power-select selected=model.stance options=model.options.stances onchange=(action "stanceChanged") as |stance|}}
              {{stance}}
            {{/power-select}}
            
    </div>
 
</div>


<div class="form-group row">
    <div class="col-sm-3">
            <b>Weapon:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#power-select selected=model.weapon options=model.options.weapons onchange=(action "weaponChanged") as |weapon|}}
              {{weapon}}
            {{/power-select}}
            
    </div>
 
</div>

<div class="form-group row">
    <div class="col-sm-3">
            <b>Weapon Specials:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#each model.weapon_specials as |spec|}}
      
                <span class="text">&nbsp; {{spec.name}}:</span>
                {{input type='checkbox' checked=spec.selected}} 
          

            {{/each}}
            
    </div>
 
</div>

     

<div class="form-group row">
    <div class="col-sm-3">
            <b>Armor:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#power-select selected=model.armor options=model.options.armor onchange=(action "armorChanged") as |armor|}}
              {{armor}}
            {{/power-select}}
            
    </div>
 
</div>

<div class="form-group row">
    <div class="col-sm-3">
            <b>Armor Specials:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#each model.armor_specials as |spec|}}
      
                <span class="text">&nbsp; {{spec.name}}:</span>
                {{input type='checkbox' checked=spec.selected}} 
          

            {{/each}}
            
    </div>
 
</div>

<div class="form-group row">
    <div class="col-sm-3">
            <b>Vehicle:</b>           
            {{tooltip-icon position='right' message='Enter a vehicle type to get in your own vehicle, or a character name to get into theirs.' icon='fa fa-question-circle'}}

    </div>
    <div class="col-sm-9">
        
            {{input type="text" size=25 id="vehicleName" value=model.vehicle}}
            <br>
            <b>Passenger Type:</b> {{#power-select selected=model.passenger_type options=passengerTypes onchange=(action "passengerTypeChanged") as |passengerType|}}
              {{passengerType}}
            {{/power-select}}
            
            
    </div>
 
</div>


{{#if model.npc_skill}}

<div class="form-group row">
    <div class="col-sm-3">
            <b>NPC Skill:</b> 
    </div>
    <div class="col-sm-9">
        
            {{#power-select selected=model.npc_skill options=model.options.npc_skills onchange=(action "npcChanged") as |npc|}}
              {{npc}}
            {{/power-select}}
            
    </div>
 
</div>

{{/if}}
    
    <div class="row">
        <div class="col col-xs-12">
            <div class="pull-right">
    
                <p> {{#link-to 'combat' model.combat class="btn btn-default"}}Cancel{{/link-to}}  
                    <button class="btn btn-primary" {{action 'save'}} >Save</button>
                </p>
    
            </div>
        {{flash-messages}}
        </div>
    </div>
    
{{outlet}}