{{title 'Send Mail'}}
<h1>Send Mail</h1>

<div class="form-group row">
    <div class="col-sm-2">
            <b>To:</b>
    </div>
    
    <div class="col-sm-10">
      
      {{#power-select-multiple selected=toList options=model searchField="name" onchange=(action "toListChanged") as |char|}}
        {{char.name}}
      {{/power-select-multiple}}
      
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2">
            <b>Subject:</b>
    </div>
    
    <div class="col-sm-10">
          {{input type="text" size=25 id="subject" value=subject }}
    </div>
</div>

<p><b>Message:</b></p>
{{markdown-editor text=message}}

{{#link-to 'mail' class='btn btn-default'}}Cancel{{/link-to}}
<button {{action "sendMail"}} class="btn btn-primary">Send</button>

{{flash-messages}}


{{outlet}}