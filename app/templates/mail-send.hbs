{{title 'Send Mail'}}
<h1>Send Mail</h1>

<div class="form-group row">
    <div class="col-sm-2">
            <b>To:</b>
    </div>
    
    <div class="col-sm-10">
          {{input type="text" size=25 id="to_list" value=to_list }} <span class="hint">Specify one or more names, separated by spaces.</span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2">
            <b>Subject:</b>
    </div>
    
    <div class="col-sm-10">
          {{input type="text" size=25 id="subject" value=subject }}
    </div>
</div>

<p><b>Message:</b></p>
{{markdown-editor text=message}}

{{#link-to 'mail' class='btn btn-default'}}Cancel{{/link-to}}
<button {{action "sendMail"}} class="btn btn-primary">Send</button>



{{outlet}}