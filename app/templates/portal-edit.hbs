{{title model.portal.name}}
<h1>Edit {{model.portal.name}} Portal</h1>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#general">General</a></li>
        <li><a data-toggle="tab" href="#desc">Description</a></li>
        <li><a data-toggle="tab" href="#creatures">Creatures & NPCs</a></li>
        <li><a data-toggle="tab" href="#events">Trivia & Events</a></li>
    </ul>



    <div class="tab-content">

      <div id="general" class="tab-pane fade in active">
        <div class="form-group row">
          <div class="col-sm-3">
            <b>Name</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.portal.name}}
          </div>
          <div class="col-sm-3">
            <b>GMs</b>
          </div>

          <div class="col-sm-9">
            {{#power-select-multiple selected=model.portal.gms options=model.characters searchField="name" onchange=(action "gmsChanged") as |char|}}
              {{char.name}}
            {{/power-select-multiple}}
          </div>

          <div class="col-sm-3">
            <b>Location</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.portal.location}}
          </div>

          <div class="col-sm-3">
            <b>Primary School</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.portal.primary_school}}
          </div>

          <div class="col-sm-3">
            <b>All Schools</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.portal.all_schools}}
          </div>
        </div>
      </div>

      <div id="desc" class="tab-pane fade in">
        <b>Description</b>
        {{markdown-editor text=model.portal.description}}
      </div>

      <div id="creatures" class="tab-pane fade in">
        <b>Creatures</b>
        {{markdown-editor text=model.portal.creatures}}
        <b>Important Figures</b>
        {{markdown-editor text=model.portal.npcs}}
      </div>




      <div id="events" class="tab-pane fade in">
        <b>Trivia</b>
        {{markdown-editor text=model.portal.trivia}}

        <b>Events</b>
        {{markdown-editor text=model.portal.events}}
      </div>

    </div>




    <div class="row">
        <div class="col col-xs-12">
            <div class="pull-right">

                <p> {{#link-to 'portal' model.portal.name class="btn btn-default"}}Cancel{{/link-to}}
                    <button class="btn btn-primary" {{action 'save'}} >Save</button>
                </p>

            </div>
        {{flash-messages}}
        </div>
    </div>


{{outlet}}
