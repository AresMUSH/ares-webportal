<h1>{{model.icdate}} - {{model.title}}</h1>
        
<div class="row log-wrap">
       
    <div class="log-box">
       
        <p>{{model.summary}}</p>

        <p><b>Date:</b> {{model.icdate}}</p>

        <p><b>Location:</b> {{model.location}}</p>


        <p><b>Related Scenes:</b>
           {{#if model.related_scenes}}
             {{#each model.related_scenes as |related index|}}
                  {{#if (not-eq index 0)}}
                  &nbsp;
                  {{/if}}
                  {{#link-to "scenes.scene" related.id}}{{related.title}}{{/link-to}}
              {{/each}}
            {{else}}
               None
            {{/if}}
        </p>
            
        <p>
            <b>Plot: </b>
            {{#if model.plot}}
                <a href="/plot/{{model.plot.id}}">{{model.plot.title}}</a>
            {{else}}
                None
            {{/if}}
        </p>
        
        <div>
          
            
        {{scene-tag scene=model}}
         
        {{#if isApproved}}
            {{#if model.has_liked}}
            <button {{action 'like' false}} class="badge badge-likes"><i class="fa fa-heart" area-hidden="true"></i> {{model.likes}}</button>
            {{else}}
            <button {{action 'like' true}} class="badge badge-likes"><i class="fa fa-heart-o" area-hidden="true"></i> {{model.likes}}</button>
            {{/if}}
        {{else}}
            <button class="badge badge-likes"><i class="fa fa-heart-o" area-hidden="true"></i> {{model.likes}}</button>
        {{/if}}
        
         </div>
         
    </div>
    
    <div class="log-participants-box">
        
    {{#each model.participants as |p|}}
        <div class="profile-gallery">    
            {{char-icon char=p}}
        </div>
    {{/each}}
    
    </div>
    
    <div class="clearfix"> </div>


</div>

<p>{{#link-to "scenes"}}<i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to Scenes{{/link-to}}</p>


<div class="ansi scene-log">
    {{{ansi-format text=model.log}}}
</div>
    
<br/>
<p>
    <b>Tags:</b>  
    {{#each model.tags as |tag|}}
    {{#link-to 'wiki.tag' tag}}{{tag}}{{/link-to}}
    {{/each}}
   </p>
   
<p>{{#link-to "scenes"}}<i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to Scenes{{/link-to}}</p>



{{#if model.can_edit }}
<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
        {{#if model.can_delete }}
        <button {{action (mut confirmDelete) true}} class="btn btn-warning">Delete Scene</button>
        {{/if}}
        {{#link-to 'scenes.edit' model.id class="btn btn-primary"}}Edit Scene{{/link-to}}
        </div>
    </div>
</div>
{{/if}}

{{#bs-modal-simple
    title="Confirm Delete"
    closeTitle="Cancel"
    submitTitle="Confirm"
    size=null
    fade=false
    open=confirmDelete
    onSubmit=(action "delete")
    onHide=(action (mut confirmDelete) null)}}
    You're about to delete scene {{model.title}}. This cannot be undone.  Are you sure?
  {{/bs-modal-simple}}

{{outlet}}