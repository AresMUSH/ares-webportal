{{page-title this.model.title}}
<h1>{{this.model.title}}</h1>

<div class="ansi">

  <p><center>[ <Linkto @route="school" @model="arcane">Arcane</Linkto> | <Linkto @route="school" @model="aether">Aether</Linkto>  | <Linkto @route="school" @model="creation">Creation</Linkto> | <Linkto @route="school" @model="entropy">Entropy</Linkto> ]</center></p>

  <p></p>
  <div class="blurb">
    {{{ansi-format text=this.model.blurb}}}

    <Linkto @route="search-spells"class="btn btn-secondary"><i class="fa fa-search" aria-hidden="true"></i> Search Spells</Linkto>
  </div>

  <div class="clear"></div>

  <h2 style="padding-top:0px; margin-top:0px;">Spells</h2>

  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item"><a data-bs-toggle="tab" class="nav-link active" href="#spellindex">+</a></li>
    {{#each-in this.model.spells as |group spells|}}
      <li class="nav-item"><a data-bs-toggle="tab" class="nav-link" href="#level{{group}}">Level {{group}}</a></li>
    {{/each-in}}
  </ul>

  <div class="tab-content">
    <div id="spellindex" class="tab-pane fade show active">
        <div class="tab-cover">Spells</div>
    </div>

    {{#each-in this.model.spells as |group spells|}}
      <div id="level{{group}}" class="tab-pane fade">
        {{#each spells as |spell|}}
          {{#if spell.available}}
            {{spell-card spell=spell}}
          {{/if}}
        {{/each}}
      </div>
    {{/each-in}}
  </div>




</div>
<script async defer src="//assets.pinterest.com/js/pinit.js"></script>
