{{title model.plot.title}}
<h1>Edit Plot - {{model.plot.title}}</h1>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="title" class="col-form-label">Title:</label>
    </div>
    <div class="col-sm-9">
        {{input type="text" size=25 id="title" enter=(action "save")  value=model.plot.title}}
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="storyteller" class="col-form-label">Storyteller:</label>
    </div>
    <div class="col-sm-9">
        {{#power-select selected=model.plot.storyteller options=model.characters searchField="name" onchange=(action "storytellerChanged") as |char|}}
          {{char.name}}
        {{/power-select}}
    </div> 
  </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="storyteller" class="col-form-label">Plot Completed:</label>
    </div>
    <div class="col-sm-9">
        {{input type='checkbox' checked=model.plot.completed}} 
    </div> 
  </div>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="summary" class="col-form-label">Summary:</label>
    </div>
    <div class="col-sm-9">
        {{markdown-editor text=model.plot.summary}}
    </div> 
  </div>
  
  <div class="form-group row">
     <div class="col-sm-3">
         <label for="title" class="col-form-label">Content Warning:</label>
     </div>
     <div class="col-sm-9">
         {{input type="text" size=25 id="content_warning" value=model.plot.content_warning}}
     </div>
   </div>
  
   <div class="form-group row">
    <div class="col-sm-3">
        <label for="description" class="col-form-label">Description:</label>
    </div>
    <div class="col-sm-9">
        {{markdown-editor text=model.plot.description}}
    </div> 
  </div>
    

<div class="pull-right">
        <p> {{#link-to 'plot' model.plot.id class="btn btn-default"}}Cancel{{/link-to}}  
        <button {{action 'save'}} class="btn btn-primary">Save</button> </p>
</div>
        
{{flash-messages}}
{{outlet}}