{{page-title 'Files'}}

<h1>{{this.model.folder}}</h1>

<p><LinkTo @route="files"><i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Files</LinkTo></p>

<table class="table">
  <tbody>
    {{#each this.model.files as |file|}}
    <tr>
    <td>
    
      <LinkTo @route="file" @models={{array file.folder file.name}}>{{file.name}}</LinkTo>
    </td>
  
    <td>
    
    <LinkTo @route="file" @models={{array file.folder file.name}}>
    <img src="/game/uploads/{{file.path}}" alt="{{file.name}}" class="thumbnail">
    </LinkTo>
  
    </td>
    <td>{{file.size}}KB</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<b>Folder Size:</b> {{this.model.folder_size}}KB


{{#if this.model.can_edit}}

  <div class="action-buttons">
    <button {{action "startMove"}} class="btn btn-secondary">Move Files</button>
    <button {{action (mut this.showUpload) true}} class="btn btn-primary">Upload</button>
  </div>

{{/if}}

<FlashMessages/>

{{#if this.showUpload}}
  <FileUploader @uploaded={{action "uploaded"}} @folder="{{this.model.folder}}" />
{{/if}}


<BsModalSimple @title="Move Folder" @closeTitle="Cancel" @submitTitle="Confirm" @size={{null}} @fade={{true}} @open={{showMove}} @onSubmit={{action "move"}} @onHide={{action (mut showMove) false}}>
    <p>Select files to move to a new folder.</p>
    
    <b>Folder Name:</b> <Input @type="text" size={{15}} id="newFolder" @value={{this.newFolder}} /> 
    
    <p><button {{action "checkAll" true}}>Check All</button>
      <button {{action "checkAll" false}}>Uncheck All</button>
    </p>
    
   <table>
   {{#each this.model.files as |file|}}
   <tr>
     <td><Input @type="checkbox" @checked={{file.selected}} /> </td>
     <td>{{file.name}}</td>
     <td><img src="/game/uploads/{{file.path}}" alt="{{file.name}}" class="thumbnail"></td>
   </tr>
   {{/each}}
   </table>
</BsModalSimple>