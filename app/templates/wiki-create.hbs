{{title 'Create New Page'}}
<h1>Create New Page</h1>
    
    <div class="form-group row">
     <div class="col-sm-3">
        <label for="title" class="col-xs-2 col-form-label">Title:</label>
     </div>
     <div class="col-sm-9">
       <Input @type="text" @size={{25}} @id="title" @enter={{action "save"}} @value={{model.title}} />
     </div> 
   </div>
   
    <div class="form-group row">
     <div class="col-sm-3">
        <label for="tags" class="col-xs-2 col-form-label">Tags:</label>
     </div>
     <div class="col-sm-9">
        <Input @type="text" @size={{25}} @id="tags" @enter={{action "save"}} @value={{model.tags}} />
     </div> 
   </div>  
    
    <div class="form-group row">
     <div class="col-sm-3">
        <label for="tags" class="col-xs-2 col-form-label">Template:</label>
     </div>
     <div class="col-sm-9">
      <PowerSelect @selected={{template}} @options={{model.templates}} @searchField="title" @onchange={{action "templateChanged"}} as |tmp|>
        {{tmp.title}}
      </PowerSelect>
     </div> 
   </div>  
    
   <MarkdownEditor @text={{model.text}} @rows={{30}} />
   
    
    <div class="row">
        <div class="col col-xs-12">
            <div class="pull-right">
                
              <LinkTo @route="wiki" class="btn btn-default">Cancel</LinkTo> 
                <button class="btn btn-primary" {{action 'save'}}>Save</button>
        </div>
      </div>
    </div>
    
    <FlashMessages />
    

<hr>
