{{title "Search Characters"}}

<h1>Search Characters</h1>

{{search-bar}}

<p>The search will only match characters that contain ALL the specified search criteria.  Searches match whole words unless otherwise specified.  Capitalization doesn't matter.</p>

<hr/>

{{#if searchResults}}
<a data-toggle="collapse" href="#searchFields"><button class="btn btn-default btn-collapse">Show/Hide Search</button></a>
{{/if}}

<div id="searchFields" class="panel-collapse collapse {{if searchResults '' 'in'}}">
  
<div class="row">
  <div class="col col-xs-3 col-md-2">
        <label>Name:</label>
  </div>

  <div class="col col-xs-9 col-md-4">
        <p>{{input type="text" size=25 id="name"  value=searchName enter="search"}}</p>
  </div>
</div>

<h3>Groups</h3>

<div class="row">
{{#each-in model.cgInfo.group_options as |key group| }}

  <div class="col col-xs-3 col-md-2">
    <label>{{group.name}}:</label>
  </div>

  <div class="col col-xs-9 col-md-4">
        <p>{{input type="text" size=25  value=(mut (get searchGroups key)) enter="search"}}</p>
  </div>

{{/each-in}}
</div>

<h3>Demographics</h3>

<div class="row">
{{#each model.cgInfo.demographics as |demo| }}

  <div class="col col-xs-3 col-md-2">
    <label>{{demo}}:</label>
  </div>

  <div class="col col-xs-9 col-md-4">
        <p>{{input type="text" size=25  value=(mut (get searchDemographics demo)) enter="search"}}</p>
  </div>

{{/each}}
</div>

<h3>Other</h3>

<div class="row">

    <div class="col col-xs-3 col-md-2">
        <label>Tag:</label>
  </div>

  <div class="col col-xs-9 col-md-4">
        <p>{{input type="text" size=25 id="tag"  value=searchTag enter="search"}}</p>
  </div>

</div>

    <div class="row">
        <div class="col col-xs-12">
            <div class="pull-right">

                <button class="btn btn-default" {{action 'reset'}}>Reset</button>
                <button class="btn btn-primary" {{action 'search'}}>Search</button>
            </div>
        </div>
    </div>

<hr/>

</div>

{{flash-messages}}

{{#if searchResults}}

{{char-group-list name="Results" chars=searchResults}}


{{else}}
<p>No search results.</p>
{{/if}}

{{outlet}}
