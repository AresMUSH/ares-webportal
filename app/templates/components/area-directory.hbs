<h3>{{this.area.name}}</h3>

<p><AnsiFormat @text={{this.area.summary}} /></p>

{{#if this.area.rooms}}

<p><b>Locations</b></p>
<ul>
  {{#each this.area.rooms as |r|}}
  <li><LinkTo @route="location" @model={{r.id}}>{{r.name}}</LinkTo>  </li>
  {{/each}}
</ul>
{{/if}}

{{#if this.area.children}}
<p><b>Areas Within</b></p>

<ul>
  {{#each this.area.children as |c| }}
  <li><LinkTo @route="area" @model={{c.id}}>{{c.name}}</LinkTo></li>
  {{/each}}
</ul>
{{/if}}

<br>
<div class="row">
  <div class="col col-xs-12">
    <LinkTo @route="area" @model={{this.area.id}} class="btn btn-primary">View Details</LinkTo>
  </div>
</div>
