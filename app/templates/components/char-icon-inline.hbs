<span style="display: inline-block">
{{#link-to "char" char.name}}
    {{#if char.icon}}
    <img class="small-profile-icon {{icon-class}} icon-status-{{char.status}} {{if (eq char.status 'offline') 'faded'}}" src="/game/uploads/{{char.icon}}" />
    {{else}}
    <img class="small-profile-icon {{icon-class}} icon-status-{{char.status}}" src="/game/uploads/theme_images/noicon.png" />
    {{/if}}
{{/link-to}}

{{#link-to "char" char.name}} {{char.name}} {{/link-to}}
</span>