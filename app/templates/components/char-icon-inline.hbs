<span class="inline-block">
<LinkTo @route="char" @model={{char.name}}>
    {{#if char.icon}}
    <img alt="{{char.name}}'s icon" class="small-profile-icon <IconClass /> icon-status-{{char.status}} {{if (eq char.status 'offline') 'faded'}}" src="/game/uploads/{{char.icon}}" >
    {{else}}
    <img alt="{{char.name}}'s icon" class="small-profile-icon <IconClass /> icon-status-{{char.status}}" src="/game/uploads/theme_images/noicon.png" >
    {{/if}}
</LinkTo>

<LinkTo @route="char" @model={{char.name}}> {{char.name}} </LinkTo>
</span>