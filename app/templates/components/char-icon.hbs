<div class="char-icon-container">
    
<div class="log-icon-container">
    <LinkTo @route="char" @model={{this.char.name}}>
       {{#if this.char.icon}}
        <img alt="{{this.char.name}}'s icon" class="log-icon" src="/game/uploads/{{this.char.icon}}" >
       {{else}}
       <img alt="{{this.char.name}}'s icon" class="log-icon" src="/game/uploads/theme_images/noicon.png" >
       {{/if}}
    </LinkTo>
</div>

<div class="log-icon-title-container">
    <div class="log-icon-title">
     {{this.char.name}}
    </div>
</div>

</div>