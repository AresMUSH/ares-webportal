<h2>Magic Items</h2>

{{#each char.magic_items as |item|}}
 <p><b>{{item.name}}</b><br>
   {{{ansi-format text=item.desc}}}</p>
{{/each}}

<h2>Potions</h2>
<ul>
{{#each char.potions as |potion|}}
  <li>{{potion}}</li>
{{/each}}
</ul>

{{#if char.potions_creating}}
  <h3>Potions Creating</h3>
  <ul>
  {{#each char.potions_creating as |potion|}}
    <li>{{potion}}</li>
  {{/each}}
  </ul>
{{/if}}
