{{#if (eq change.type 'char')}}
 <LinkTo @route="char" @model={{change.data.char_name}}>{{change.message}}</LinkTo>
{{else if (eq change.type 'wiki')}}
 <LinkTo @route="wiki-page" @model={{change.data.page_name}}>{{change.message}}</LinkTo>
{{else if (eq change.type 'file')}}
 <LinkTo @route="file" @models={{array change.data.folder change.data.name}}>{{change.message}}</LinkTo>
{{else if (eq change.type 'event')}}
 <LinkTo @route="event" @model={{change.data.id}}>{{change.message}}</LinkTo>
{{else if (eq change.type 'scene')}}
 <LinkTo @route="scene" @model={{change.data.id}}>{{change.message}}</LinkTo>
{{else}}
 {{change.message}}
{{/if}}