{{#if (eq this.change.type 'char')}}
 <LinkTo @route="char" @model={{this.change.data.char_name}}>{{this.change.message}}</LinkTo>
{{else if (eq this.change.type 'wiki')}}
 <LinkTo @route="wiki-page" @model={{this.change.data.page_name}}>{{this.change.message}}</LinkTo>
{{else if (eq this.change.type 'file')}}
 <LinkTo @route="file" @models={{array this.change.data.folder this.change.data.name}}>{{this.change.message}}</LinkTo>
{{else if (eq this.change.type 'event')}}
 <LinkTo @route="event" @model={{this.change.data.id}}>{{this.change.message}}</LinkTo>
{{else if (eq this.change.type 'scene')}}
 <LinkTo @route="scene" @model={{this.change.data.id}}>{{this.change.message}}</LinkTo>
{{else if (eq this.change.type 'plot')}}
 <LinkTo @route="plot" @model={{this.change.data.id}}>{{this.change.message}}</LinkTo>
{{else}}
 {{this.change.message}}
{{/if}}