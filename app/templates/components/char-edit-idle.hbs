<div id="idle" class="tab-pane fade in">
  {{#if this.model.char.show_idle_tab}}
  <hr>
  <h3>Idle Settings</h3>

  <div class="form-group row">
    <div class="col-sm-3">
            <b>Idle Note</b>
    </div>
  
    <div class="col-sm-9">
    
        <input type="text" id="idleNote" placeholder="Notes" value={{this.model.char.idle_notes}} />
      
    </div>
  </div>

  {{/if}}


  {{#if this.model.char.show_roster_tab}}
  <hr>
  <h3>Roster Settings</h3>
  <div class="form-group row">
      <div class="col-sm-3">
              <b>On Roster</b>
      </div>
    
      <div class="col-sm-9">
            <Input @type="checkbox" @checked={{this.model.char.roster.on_roster}} />
      </div>
  </div>


  <div class="form-group row">
      <div class="col-sm-3">
              <b>Restricted App</b>
      </div>
    
      <div class="col-sm-9">
            <Input @type="checkbox" @checked={{this.model.char.roster.restricted}} />
      </div>
  </div>

  <div class="form-group row">
      <div class="col-sm-3">
              <b>Roster Contact</b>
      </div>
    
      <div class="col-sm-9">
      
          <input type="text" id="handleName" placeholder="Roster Contact" value={{this.model.char.roster.contact}} />
        
      </div>
  </div>

  <div class="form-group row">
      <div class="col-sm-3">
              <b>Previously Played</b>
      </div>
    
      <div class="col-sm-9">
            <Input @type="checkbox" @checked={{this.model.char.roster.played}} />
      </div>
  </div>



  <div class="form-group row">
      <div class="col-sm-3">
              <b>Roster Notes</b>
      </div>
    
      <div class="col-sm-9">
      
          <MarkdownEditor @text={{this.model.char.roster.notes}} />
        
      </div>
  </div>
  {{/if}}
</div>