<div class="panel panel-default markdown-editor">
    <div class="panel-body markdown-editor">
        
        <div class="pull-right markdown-controls">
    <a href="#" {{action 'preview'}}>
        {{#bs-tooltip placement="left"}}Toggle preview.{{/bs-tooltip}}
        
        {{#if preview}}
        <i class="fa fa-eye-slash"   aria-hidden="true"></i>
        {{else}}
        <i class="fa fa-eye"  aria-hidden="true"></i>
        {{/if}}
    </a>
    
    <a href="#" {{action 'showHelp'}}>
        <i class="fa fa-question-circle" aria-hidden="true">
          {{#bs-tooltip placement="left"}}Markdown help.{{/bs-tooltip}}
          
        </i>
    </a>
    </div>
    
        
{{textarea value=text cols="80" rows=rows enter=onEnter}}
{{#if preview}}

<div class="panel panel-default">
    <div class="panel-body">
        {{{ansi-format text=preview}}}
        
    </div>
</div>
{{/if}}

</div>
</div>
