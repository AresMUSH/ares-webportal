<div class="char-ability-title">{{title}}</div>

  <table class="char-ability-list">
  {{#each list as |ability| }}
  <tr>
    <td>{{ability.name}} 
      {{#if ability.linked_attr}}
      <span class="fs3-linked-attr">({{ability.linked_attr}})</span>
      {{/if}}
    </td>
    <td><Fs3Dots @rating={{ability.rating}} @max={{max}} />
    
    {{#if showSpecs}}
    <br>
        {{#if ability.specialties}}
          ({{ability.specialties}})
        {{/if}}
    {{/if}}
    
    </td>
    <td>{{ability.rating_name}}</td>
  </tr>
  {{/each}}
</table>
