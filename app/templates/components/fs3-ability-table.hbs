<div class="char-ability-title">{{title}}</div>

  <table class="char-ability-list">
  {{#each list as |ability| }}
  <tr>
    {{#if ability.rating}}
      <td>{{ability.name}}</td>

      <td>{{fs3-dots rating=ability.rating max=max}}

      {{#if showSpecs}}
      <br>
          {{#if ability.specialties}}
            ({{ability.specialties}})
          {{/if}}
      {{/if}}

      </td>
      <td>{{ability.rating_name}}</td>
    {{/if}}
  </tr>
  {{/each}}
</table>
