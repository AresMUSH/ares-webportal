<table class="table table-striped">
<tbody>
      <tr>
      <th>Title</th>
      <th>Posted By</th>
    </tr>
    
{{#each posts as |post|}}
    <tr>
    <td>
        {{#if post.unread}}
        <span class="label label-pill label-primary"> <i class="fa fa-flag" aria-hidden="true"></i></span>
        {{/if}}
         {{#link-to 'forum-topic' post.category_id post.id}}{{post.title}}{{/link-to}}
     </td>
     <td>{{post.author}} @ {{post.date}}
     </td>      
     </tr>
{{/each}}
</tbody>
</table>