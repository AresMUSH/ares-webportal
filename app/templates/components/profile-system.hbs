<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#systeminfo">+</a></li>

  {{#if char.roster}}
    <li><a data-toggle="tab" href="#rosternotes">Roster Info</a></li>
  {{/if}}

  {{#if (not game.disabled_plugins.fs3skills)}}
     {{#if char.fs3.show_sheet}}
      <li><a data-toggle="tab" href="#systemsheet">Sheet</a></li>
      {{/if}}
      {{#if char.fs3.xp}}
      <li><a data-toggle="tab" href="#systemxp">XP</a></li>
      {{/if}}
  {{/if}}

  {{#if (not game.disabled_plugins.fs3combat)}}
      <li><a data-toggle="tab" href="#systemdamage">Damage</a></li>
  {{/if}}

  {{#if char.spells}}
    <li><a data-toggle="tab" href="#systemspells">Spells</a></li>
  {{/if}}

  {{#if char.spells}}
    <li><a data-toggle="tab" href="#systemspellcards">Spell Cards</a></li>
  {{/if}}

  {{#if char.magic_items}}
    <li><a data-toggle="tab" href="#systemitems">Magic Items</a></li>
  {{/if}}

  {{#if char.achievements}}
      <li><a data-toggle="tab" href="#achievements">Achievements</a></li>
  {{/if}}
</ul>




<div class="tab-content">
  <div id="systeminfo" class="tab-pane fade in active">
      <div class="tab-cover">System Information</div>
  </div>
  {{#if char.roster}}
  <div id="rosternotes" class="tab-pane fade">
    {{{ansi-format text=char.roster.notes}}}

    <p>Contact: {{char.roster.contact}}</p>

    {{#if char.roster.previously_played}}
    <span class="label label-info">Previously Played</span>
    {{/if}}

    {{#if char.roster.app_required}}
    <span class="label label-warning">App Required</span>
    {{/if}}

  </div>
  {{/if}}

  <div id="systemhooks" class="tab-pane fade">
      {{{ansi-format text=char.rp_hooks}}}
  </div>


  {{#if char.background}}
  <div id="systembg" class="tab-pane fade">
      {{{ansi-format text=char.background}}}
   </div>
  {{/if}}

  {{#if char.description}}
  <div id="systemdesc" class="tab-pane fade">
       {{{ansi-format text=char.description}}}

       {{#if char.details}}
       {{#each char.details as |detail|}}
       <b>{{detail.name}}</b>: {{{ansi-format text=detail.desc}}}
       {{/each}}
       {{/if}}
  </div>
  {{/if}}

  {{#if (not game.disabled_plugins.fs3skills)}}
    {{#if char.fs3.show_sheet}}
      <div id="systemsheet" class="tab-pane fade">
        {{fs3-sheet char=char}}
      </div>
     {{/if}}
     {{#if char.fs3.xp}}
      <div id="systemxp" class="tab-pane fade">
        {{fs3-xp char=char abilityLearned=(action 'abilityLearned')}}
      </div>
     {{/if}}
  {{/if}}

  {{#if char.spells}}
  <div id="systemspells" class="tab-pane fade">
    {{char-spells char=char}}
  </div>
  {{/if}}

  {{#if char.spells}}
  <div id="systemspellcards" class="tab-pane fade">
    {{char-spell-cards char=char}}
  </div>
  {{/if}}

  {{#if char.magic_items}}
  <div id="systemitems" class="tab-pane fade">
    {{char-magic-items char=char}}
  </div>
  {{/if}}

  {{#if (not game.disabled_plugins.fs3combat)}}
  <div id="systemdamage" class="tab-pane fade">
    {{fs3-damage char=char}}
  </div>
  {{/if}}

  {{#if char.achievements}}
  <div id="achievements" class="tab-pane fade">
      {{char-achievements achievements=char.achievements}}
  </div>
  {{/if}}
</div>
