<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#systeminfo">+</a></li>

  {{#if char.roster}}
    <li><a data-toggle="tab" href="#rosternotes">Roster Info</a></li>
  {{/if}}
  
  <li><a data-toggle="tab" href="#systemhooks">RP Hooks</a></li>

  {{#if char.background}}
      <li><a data-toggle="tab" href="#systembg">Background</a></li> 
  {{/if}}
  
  {{#if char.description}}
  <li><a data-toggle="tab" href="#systemdesc">Description</a></li>
  {{/if}}
  
  {{profile-fs3-tabs char=char game=game}}

  {{profile-custom-tabs char=char game=game}}

  {{#if char.achievements}}
      <li><a data-toggle="tab" href="#achievements">Achievements</a></li>
  {{/if}}

</ul>




<div class="tab-content">
  <div id="systeminfo" class="tab-pane fade in active">
      <div class="tab-cover">System Information</div>
  </div>
  {{#if char.roster}}
  <div id="rosternotes" class="tab-pane fade">
    {{{ansi-format text=char.roster.notes}}}
    
    <p>Contact: {{char.roster.contact}}</p>

    {{#if char.roster.previously_played}}
    <span class="label label-info">Previously Played</span>
    {{/if}}

    {{#if char.roster.app_required}}
    <span class="label label-warning">App Required</span>
    {{/if}}
    
  </div>
  {{/if}}
  
  <div id="systemhooks" class="tab-pane fade">
      {{{ansi-format text=char.rp_hooks}}}
  </div>
  
  
  {{#if char.background}}
  <div id="systembg" class="tab-pane fade">
      {{{ansi-format text=char.background}}}
   </div>
  {{/if}} 
  
  {{#if char.description}}
  <div id="systemdesc" class="tab-pane fade">
       {{{ansi-format text=char.description}}}
       
       {{#if char.details}}
       {{#each char.details as |detail|}}
       <b>{{detail.name}}</b>: {{{ansi-format text=detail.desc}}}
       {{/each}}
       {{/if}}
  </div>
  {{/if}}
  
  {{profile-fs3 char=char game=game reloadChar=(action 'reloadChar')}}
  
  {{profile-custom char=char game=game reloadChar=(action 'reloadChar')}}
  
  {{#if char.achievements}}
  <div id="achievements" class="tab-pane fade">
      {{char-achievements achievements=char.achievements}}
  </div>
  {{/if}}
</div>