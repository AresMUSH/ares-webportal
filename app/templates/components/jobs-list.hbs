<div class="table-responsive">
<table class="table table-striped">
<tbody>
    <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Category</th>
        <th>Status</th>
        <th>Submitter</th>
        <th>Handled By</th>
    </tr>
{{#each jobs as |job|}}
    <tr><td>
        {{#if job.unread}}
        <span class="label label-pill label-primary"> <i class="fa fa-flag" aria-label="New Activity"></i></span>
        {{/if}}

        {{#link-to 'job' job.id}}#{{job.id}} - {{job.title}}{{/link-to}}
    </td>
    <td>
      {{job.short_created}}
    </td>
    <td>
        <span class="label label-info job-category job-category-{{job.category}}">{{job.category}}</span>
    </td>
    <td>
        <p><span class="label label-info job-status job-status-{{job.status}}">{{job.status}}</span></p>

    </td>
    <td>
        {{job.author}}
    </td>
    <td>
        {{job.assigned_to}}
    </td>


     </tr>
{{/each}}
</tbody>
</table>
</div>

{{#each pages as |pg|}}
{{#if (eq pg page)}}
<button class="btn btn-primary" {{action "goToPage" pg}}>{{pg}}</button>
{{else}}
<button class="btn btn-default" {{action "goToPage" pg}}>{{pg}}</button>
{{/if}}
{{/each}}
