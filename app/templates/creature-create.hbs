{{page-title 'Create Creature'}}
<h1>Create Creature</h1>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#general">General</a></li>
        <li><a data-toggle="tab" href="#traits">Traits</a></li>
        <li><a data-toggle="tab" href="#society">Society</a></li>
        <li><a data-toggle="tab" href="#events">Events</a></li>
    </ul>



    <div class="tab-content">

      <div id="general" class="tab-pane fade in active">
        <div class="form-group row">
          <div class="col-sm-3">
            <b>Name*</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 enter=(action "save") value=model.creature.name}}
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>GMs</b>
          </div>

          <div class="col-sm-9">
            <PowerSelectMultiple @selected={{model.creature.gms}} @options={{model.characters}} @searchEnabled=true @searchField="name"  @onChange={{action "gmsChanged"}} as |char|>
              {{char.name}}
            </PowerSelectMultiple>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>Major School</b>
          </div>

          <div class="col-sm-9">
            <p><PowerSelect @selected={{model.creature.major_school}} @options={{model.schools}} @onChange={{action "majorschoolChanged"}} as |school|>
              {{school}}
            </PowerSelect></p>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>Minor School</b>
          </div>

          <div class="col-sm-9">
            <p><PowerSelect @selected={{model.creature.minor_school}} @options={{model.schools}} @onChange={{action "minorschoolChanged"}} as |school|>
              {{school}}
            </PowerSelect></p>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>Languages:</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.creature.language}}
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>Portals</b>
          </div>

          <div class="col-sm-9">
            <PowerSelectMultiple @selected={{model.creature.portals}} @options={{model.portals}} @searchEnabled=true @searchField="name"  @onChange={{action "portalsChanged"}} as |portal|>
              {{portal.name}}
            </PowerSelectMultiple>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>Also Found:</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.creature.found}}
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3">
            <b>Pinterest URL</b>
          </div>

          <div class="col-sm-9">
            {{input type="text" size=25 value=model.creature.pinterest}}
          </div>
        </div>

        <div class="form-group row">
          <div class="col col-xs-3">
            <p><label>Sapient?</label>
            {{input type="checkbox"  id="sapient"  checked=isSapient}}</p><br>
          </div>

          <div class="col-sm-9">
            <MarkdownEditor @text={{model.creature.edit_short_desc}}  @rows={{5}} />
          </div>

        </div>
      </div>

      <div id="traits" class="tab-pane fade in">
        <b>Traits & Description</b>
        <MarkdownEditor @text={{model.creature.edit_traits}} />

        <b>Magical Abilities & Spells<</b>
        <MarkdownEditor @text={{model.creature.edit_magical_abilities}}/>
      </div>


      <div id="society" class="tab-pane fade in">
        <b>Society</b>
        <MarkdownEditor @text={{model.creature.edit_society}} />
      </div>


      <div id="events" class="tab-pane fade in">

        <div class="col-sm-3">
          <b>Plots</b>
        </div>

        <div class="col-sm-9">
          <PowerSelectMultiple @selected={{model.creature.plots}} @options={{model.plots}} @searchEnabled=true @searchField="name"  @onChange={{action "plotsChanged"}} as |plot|>
            {{plot.title}}
          </PowerSelectMultiple>
        </div>
        
        <b>Events</b>
        <MarkdownEditor @text={{model.creature.edit_events}} />
      </div>

    </div>




    <div class="row">
      <div class="col col-xs-12">
          <div class="pull-right">

              <p> {{#link-to 'creatures' class="btn btn-default"}}Cancel{{/link-to}}
                  <button class="btn btn-primary" {{action 'save'}} >Save</button>
              </p>

          </div>
        {{flash-messages}}
        </div>
    </div>


{{outlet}}
