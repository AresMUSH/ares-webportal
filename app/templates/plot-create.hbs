{{title 'Create Plot'}}
<h1>Create a Plot</h1>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="title" class="col-form-label">Title:</label>
    </div>
    <div class="col-sm-9">
         {{input type="text" size=25 id="title" enter=(action "save")  value=title}}
    </div>
  </div>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="storyteller" class="col-form-label">Storyteller:</label>
    </div>
    <div class="col-sm-9">
        {{#power-select options=model selected=storyteller searchField="name" onchange=(action "storytellerChanged") as |char|}}
          {{char.name}}
        {{/power-select}}
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <b>Storytellers:</b>
    </div>

    <div class="col-sm-9">
      {{#power-select-multiple  selected=storytellers options=model searchField="name" onchange=(action "storytellersChanged") as |char|}}
        {{char.name}}
      {{/power-select-multiple}}
    </div>
  </div>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="summary" class="col-form-label">Summary:</label>
    </div>
    <div class="col-sm-9">
       {{markdown-editor text=summary}}
    </div>
  </div>

      <div class="form-group row">
       <div class="col-sm-3">
        <label for="description" class="col-form-label">Events:</label>
       </div>
       <div class="col-sm-9">
        {{markdown-editor text=description}}
       </div>
     </div>


        <p> {{#link-to 'plots' class="btn btn-default"}}Cancel{{/link-to}}
        <button {{action 'save'}} class="btn btn-primary">Save</button> </p>

{{flash-messages}}
{{outlet}}
