{{page-title 'Create Plot'}}
<h1>Create a Plot</h1>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="title" class="col-form-label">Title:</label>
    </div>
    <div class="col-sm-9">
         <Input @type="text" size={{25}} id="title" @enter={{action "save"}} @value={{this.title}} />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <b>Storytellers:</b>
    </div>

    <div class="col-sm-9">
      <PowerSelectMultiple @selected={{this.storytellers}} @options={{this.model}} @searchEnabled=true @searchField="name" @onChange={{action "storytellersChanged"}} as |char|>
        {{char.name}}
      </PowerSelectMultiple>
    </div>
  </div>

   <div class="form-group row">
    <div class="col-sm-3">
        <label for="summary" class="col-form-label">Summary:</label>
    </div>
    <div class="col-sm-9">
       <MarkdownEditor @text={{this.summary}} />
    </div>
  </div>


     <div class="form-group row">
        <div class="col-sm-3">
            <label for="title" class="col-form-label">Content Warning:</label>
        </div>
        <div class="col-sm-9">
            <Input @type="text" size={{25}} id="content_warning" @value={{this.contentWarning}} />
        </div>
      </div>

      <div class="form-group row">
         <div class="col-sm-3">
             <label for="tags" class="col-form-label">Tags:</label>
         </div>
         <div class="col-sm-9">
             <Input @type="text" size={{25}} id="tags" @value={{this.tags}} />
         </div>
       </div>

      <div class="form-group row">
       <div class="col-sm-3">
        <label for="description" class="col-form-label">Events:</label>
       </div>
       <div class="col-sm-9">
        <MarkdownEditor @text={{this.description}} />
       </div>
     </div>

<div class="action-buttons">
  <LinkTo @route="plots" class="btn btn-secondary">Cancel</LinkTo>
  <button {{action 'save'}} class="btn btn-primary">Save</button>
</div>

<FlashMessages />
{{outlet}}
