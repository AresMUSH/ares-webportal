{{page-title this.model.portal.name}}
<h1>{{this.model.portal.name}} Portal</h1>

<div class="ansi">

  <div class="ooc"> <b>This is a GM resource and is for OOC reference only. While some of the information here is ICly known, some of it may not be.</b></div>


  <LinkTo @route="portals"><i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Portals</LinkTo>
  <div class="action-buttons">
    {{#link-to 'portal-edit' this.model.portal.id class="btn btn-secondary"}}Edit Portal{{/link-to}}
  </div>


  <div class="row profile-wrap">
    <div class="row">
      <div class="col-md-4 col-sm-12 col-xs-12 profile-image-wrap">
      {{#if this.model.portal.profile_image.name}}
        <LinkTo @route="file" @models={{array this.model.portal.profile_image.folder creature.profile_image.name}}>
            <img src="/game/uploads/{{this.model.portal.profile_image.path}}" alt="{{this.model.creature.name}}'s image"  class="profile-image">
        </LinkTo>
      {{else}}
          <!-- <img src="/game/uploads/theme_images/noicon.png" class="profile-image" alt="{{creature.name}}'s image"> -->
      {{/if}}
      </div>

      <div class="col-md-8 col-sm-12 col-xs-12 profile-demo-wrap info-box">
        <div class="infobox-heading">
          <div class="infobox-title-text">{{this.model.portal.name}} </div>
          <div class="infobox-body">
            {{#if this.model.portal.gms}}<i>For more information, see {{#each this.model.portal.gms as |gm|}}
            {{#link-to 'char' gm.name}}{{gm.name}} {{/link-to}}
            {{/each}} </i><br> {{/if}}
            {{#if this.model.portal.location}}<b>Location:</b> {{this.model.portal.location}}<br>  {{/if}}
            {{#if this.model.portal.primary_school}}
              <b>Dominant School:</b> {{#link-to 'schools' this.model.portal.primary_school}}
            {{this.model.portal.primary_school}}
            {{/link-to}}
            <br>{{/if}}
            {{#if this.model.portal.all_schools}}<b>All Schools:</b>
              {{#each this.model.portal.all_schools as |school|}}
                {{#link-to 'schools' school}}{{school}}{{/link-to}}
              {{/each}}<br>
            {{/if}}


            {{#if this.model.portal.latitude}}
            <br>
            <span style="margin: 15px;">
              <iframe width="300" height="250" frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?q={{this.model.portal.latitude}}%20{{this.model.portal.longitude}}&key=AIzaSyDtQxW3ou9wLCgpLzTHiYQCKLv4YBM3t1c&maptype=satellite" allowfullscreen></iframe>
            </span>
            {{/if}}
          </div>
        </div>
      </div>

    </div>
    <div class="short-desc">
      <p>{{{ansi-format text=this.model.portal.short_desc}}}</p>
      {{#if this.model.portal.location_known}}<span class="ansi-green-fg"><i><b>This portal's location is ICly available on WeirdNet</b></i></span>
      {{else}}<span class="ansi-red-fg"><i><b>This portal's location is NOT ICly available on WeirdNet</b></i></span>
      {{/if}}
    </div>
  </div>
 <div class="clear"></div>
  {{#if this.model.portal.pinterest}}

    <div class="pinterest"> <a  data-pin-do="embedBoard" data-pin-board-width="400" data-pin-scale-height="500" data-pin-scale-width="115" href="{{this.model.portal.pinterest}}"></a></div>
  {{/if}}

  {{#if this.model.portal.description}}
    <h2>Description</h2>
    {{{ansi-format text=this.model.portal.description}}}
  {{/if}}

  {{#if this.model.portal.society}}
    <h2>Society</h2>
    {{{ansi-format text=this.model.portal.society}}}
  {{/if}}

  {{#if this.model.portal.npcs}}
    <h2>Important Figures:</h2>
    {{{ansi-format text=this.model.portal.npcs}}}
  {{/if}}

  {{#if this.model.portal.creatures}}
    <h2>Creatures</h2>
    <ul>
    {{#each this.model.portal.creatures as |creature|}}
      <li>{{#link-to 'creature' creature.id}}{{creature.name}} {{/link-to}}</li>
    {{/each}}
    </ul>
  {{/if}}

  {{#if this.model.portal.other_creatures}}
    {{{ansi-format text=this.model.portal.other_creatures }}}
  {{/if}}

  {{#if this.model.portal.trivia}}
    <p><h2>Trivia</h2>
    {{{ansi-format text=this.model.portal.trivia}}}</p>
  {{/if}}

  {{#if this.model.portal.rp_suggestions}}
    <p><h2>RP Suggestions</h2>
    {{{ansi-format text=this.model.portal.rp_suggestions}}}</p>
  {{/if}}

  {{#if this.model.portal.plots}}
    <h2>Plots</h2>
    <ul>
      {{#each this.model.portal.plots as |plot|}}
        <li>{{#link-to 'plot' plot.id}}{{plot.title}} {{/link-to}}</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if this.model.portal.events}}
    <p><h2>Events</h2>
    {{{ansi-format text=this.model.portal.events}}}</p>
  {{/if}}

  <div class="card panel-default">

  {{#if this.model.portal.display_image_gallery}}
    {{#each this.model.portal.display_image_gallery as |gallery|}}
      <LinkTo @route="file" @models={{array gallery.folder gallery.name}}>
      <img src="/game/uploads/{{gallery.path}}" class="profile-gallery" alt="{{gallery.name}}" >
      </LinkTo>
    {{/each}}
  {{/if}}
  <div class="clearfix"></div>
  </div>

<h2>Scenes</h2>
<!-- To get the filtered list to work, I need a new get_portal_scenes api based off get_scenes_handler.rb - changing char_id to portal_id. Return scene list this way instead of via this.model.portal.scenes. Add said api to the route js file. -->
<SceneList @scenes={{this.model.portal.scenes}} @pages={{this.model.portal.scenes.pages}} @sceneTypes={{this.model.sceneOptions.scene_types}} @filter={{filter}} @page={{page}} @filterChanged={{action "filterChanged"}} @goToPage={{action "goToPage"}}  />
</div>

<div class="row">
    <div class="col col-xs-12">
      <LinkTo @route="portals"><i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Portals</LinkTo>
      <div class="action-buttons">
        {{#link-to 'portal-edit' this.model.portal.id class="btn btn-secondary"}}Edit Portal{{/link-to}}
      </div>
    </div>
</div>
<script async defer src="//assets.pinterest.com/js/pinit.js"></script>
