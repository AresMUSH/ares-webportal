{{title 'Secrets'}}

<h1>Secrets</h1>
{{#each model.secrets as |secret|}}

  {{#if secret.secret_name}}
    <h4>{{char-icon char=secret.id}}{{#link-to 'char' secret.id}}{{secret.name}}{{/link-to}}</h4>
    <p>
      {{#if secret.secret_plot}}
        {{#link-to 'plot' secret.secret_plot}}{{secret.secret_name}} {{/link-to}}
      {{else}}
        <b>{{secret.secret_name}}</b>
      {{/if}}
      <br>
    {{secret.secret_summary}}<br>
  </p>

  {{/if}}
{{/each}}
