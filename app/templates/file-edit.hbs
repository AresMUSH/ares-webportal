{{page-title model.name}}
<h1>{{model.name}}</h1>

<img src="/game/uploads/{{model.path}}" alt="{{model.name}}" class="image-container file-image" >


<p><label for="name">Name:</label></p>
<p><Input @type="text" @id="name" @value={{model.new_name}} /></p>

<p><label for="folder">Folder (optional):</label></p>
<p><Input @type="text" @id="folder" @value={{model.new_folder}} /></p>


<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
          <LinkTo @route="file" @models={{array model.folder model.name}} class="btn btn-default">Cancel</LinkTo>

          {{#if isApproved}}
          <button {{action 'save'}} class="btn btn-primary">Save</button>
          {{/if}}
          
         </div>
  </div>
</div>

<FlashMessages />
{{outlet}}