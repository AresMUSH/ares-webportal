{{title model.title}}
<h1>{{model.title}}</h1>

<div class="ansi">

<p><center>[ <a href="/schools/air">Air</a> | <a href="/schools/corpus">Corpus</a> | <a href="/schools/earth">Earth</a> | <a href="/schools/fire">Fire</a> | <a href="/schools/fire">Nature</a> | <a href="/schools/spirit">Spirit</a> | <a href="/schools/water">Water</a> | <a href="/schools/will">Will</a> ]</center></p>

<div class="pinterest"> <a  data-pin-do="embedBoard" data-pin-board-width="400" data-pin-scale-height="500" data-pin-scale-width="115" href="https://www.pinterest.com/spiritlakeworld/{{model.pinterest}}/"></a></div>

<p></p>
<div class="blurb">
  {{{model.blurb}}}
</div>

<div class="clear"></div>

<h2 style="padding-top:0px; margin-top:0px;">Spells</h2>

<ul class="nav nav-tabs">
  {{#each-in model.spells as |group spells|}}
    <li ><a data-toggle="tab" href="#{{group}}">Level {{group}}</a></li>
  {{/each-in}}
</ul>

<div class="tab-content">
  {{#each-in model.spells as |group spells|}}
  <div id="{{group}}" class="tab-pane fade in {{group}}">

    {{#each spells as |spell|}}

      {{#if spell.available}}
        <div class="spell_card">
          {{#if spell.potion}}
            <span style="float:right;"><img src="http://spiritlakemu.com/game/uploads/theme_images/potionicon.png" width="35px" title="Can be made into a potion"></span>
          {{/if}}
          <h3>{{spell.name}}</h3>
          <b>Level {{spell.level}} {{spell.school}} spell </b><br><br>

          {{{spell.desc}}}<br><br>
          {{#if spell.targets}}
            <b>Targets:</b> {{spell.targets}}<br>
          {{/if}}
          {{#if spell.duration}}
            <b>Duration:</b> {{spell.duration}}<br>
          {{/if}}
          <b>Casting Time:</b> {{spell.casting_time}}<br>
          <b>Range:</b> {{spell.range}}
          {{#if spell.los}}
            requires line of sight<br>
          {{/if}}
          {{#if spell.area}}
            <b>Area:</b> {{spell.area}}<br>
          {{/if}}
          {{#if spell.heal}}
            <b>Heal:</b> {{spell.heal}}<br>
          {{/if}}
          <br>
        </div>
      {{/if}}
    {{/each}}
  </div>
  {{/each-in}}
</div>



</div>
<script async defer src="//assets.pinterest.com/js/pinit.js"></script>
