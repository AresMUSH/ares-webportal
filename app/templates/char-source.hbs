<h1>{{model.char_name}} Page Source</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Other Versions
    </div>

<ol>
    {{#each model.versions as |version|}}
    <li>{{#link-to 'char-source' model.char_id version.id}}{{version.created}} - {{version.author}}{{/link-to}}</li>
    {{/each}}
</ol>

</div>

            
<div class="panel panel-default">
    <div class="panel panel-heading">
        Selected Version
    </div>
    <div class="panel panel-body">
        <pre>
        {{{model.text}}}
        </pre>
    </div>
</div>

{{#if model.diff}}

<div class="panel panel-default">
    <div class="panel panel-heading">
        Compared to Previous Version
        &nbsp;
        <a data-toggle="collapse" href="#compare"><button class="btn btn-default">Show/Hide</button></a>
        
    </div>
    <div id="compare" class="panel-collapse collapse">
        <div class="panel panel-body">
            {{{model.diff}}}
        </div>
    </div>
</div>

{{/if}}

<div class="row">
    <div class="col col-xs-12">
        <div class="pull-right">
      
      {{#link-to 'char' model.char_id}}<i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Character{{/link-to}}

  </div>
  </div>
</div>

{{outlet}}