{{page-title this.model.message.subject}}
<h1>{{this.model.message.subject}}</h1>

<p><LinkTo @route="mail"><i class="fa fa-long-arrow-alt-left" aria-hidden="true"></i> Back to Mail</LinkTo></p>

{{#if this.model.message.in_trash}}
<div class="alert alert-warning">This message is in the trash.</div>
{{/if}}

<div class="mail-message-inbox">Inbox: {{this.model.message.recipient}}</div>

<table>    
    <tr>
        <td>
            <b>From:</b> 
        </td>
        <td>
            {{this.model.message.from}}
        </td>
    </tr>

    <tr>
        <td>
            <b>To:</b>
        </td>
        <td>
             {{this.model.message.to_list}}
        </td>
    </tr>
    
    <tr>
        <td>
            <b>Sent:</b>
        </td>
        <td>
             {{this.model.message.created_long_format}}
        </td>
    </tr>
    

    <tr>
        <td>
            <b>Tags:</b>
        </td>
        <td>
            
             <PowerSelectMultiple @selected={{this.model.message.tags}} @options={{this.model.message.all_tags}} @onChange={{action "tagsChanged"}} as |tag|>
               {{tag}}
             </PowerSelectMultiple>
             
             <Input @type="text" size={{10}} id="newTag" @value={{this.newTag}} /> 
             <a href="#" {{action 'addNewTag'}}><i class="fa fa-plus" aria-label="Add Tag"></i></a>     

        </td>
    </tr>
    

    <tr>
        <td>
            <b>Subject:</b>
        </td>
        <td>
            {{this.model.message.subject}}
        </td>
    </tr>
</table>
<hr>
    
<AnsiFormat @text={{this.model.message.body}} />

<hr>
  <div class="action-buttons">
    {{#if this.model.message.in_trash}}
      <button class="btn btn-secondary" {{action 'uneleteMsg'}}>Undelete</button>
    {{else}}
      <button class="btn btn-warning" {{action 'deleteMsg'}}>Trash</button>
      <button class="btn btn-secondary" {{action 'archiveMsg'}}>Archive</button>          
    {{/if}}
  </div>

 
{{#if this.model.message.can_reply}}

<div class="card card-default">
    <div class="card-heading">
        <a data-bs-toggle="collapse" href="#reply">Click to Reply</a>
        
    </div>
    <div id="reply" class="card-collapse collapse">
      <div class="card-body">
      <p><b>Replying As:</b> {{this.model.message.recipient}}</p>
      <p><b>To:</b> <a href="#" {{action 'replyAll'}}>[Reply All]</a>
        <PowerSelectMultiple @selected={{this.replyToList}} @options={{this.model.characters}} @searchEnabled=true @searchField="name" @onChange={{action "replyToListChanged"}} as |char|>
          {{char.name}}
        </PowerSelectMultiple>
      </p>
      <p><b>Subject:</b> <Input @type="text" size={{25}} id="replySubject" @value={{this.replySubject}} /></p>
          <MarkdownEditor @text={{this.replyMessage}} />

          <div class="action-buttons">
            <button class="btn btn-primary" {{action 'sendReply'}}>Send</button>    
          </div>
        </div>
    </div>
</div>

{{/if}}


<div class="card card-default">
    <div class="card-heading">
        <a data-bs-toggle="collapse" href="#forward">Click to Forward</a>
        
    </div>
    <div id="forward" class="card-collapse collapse">
      <div class="card-body">
      <p><b>Forwarding As:</b> {{this.model.message.recipient}}</p>
      <p><b>To:</b>
      <PowerSelectMultiple @selected={{this.fwdToList}} @options={{this.model.characters}} @searchEnabled=true @searchField="name" @onChange={{action "fwdToListChanged"}} as |char|>
        {{char.name}}
      </PowerSelectMultiple>
      </p> 
      <p><b>Subject:</b> <Input @type="text" size={{25}} id="fwdSubject" @value={{this.fwdSubject}} /></p>
      <b>Original Message:</b>
      <AnsiFormat @text={{this.model.message.body}} />
          <MarkdownEditor @text={{this.fwdMessage}} />

          <div class="action-buttons">
            <button class="btn btn-primary" {{action 'sendForward'}}>Send</button>    
          </div>
        </div>
    </div>
</div>

<FlashMessages />
{{outlet}}