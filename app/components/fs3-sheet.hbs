<div class="fs3-sheet">
  
    <Fs3AbilityTable @title="Attributes" @list={{this.char.fs3.attributes}} @max={{4}} @showSpecs={{false}} @abilityType="attribute" />
    
    <Fs3AbilityTable @title="Action Skills" @list={{this.char.fs3.action_skills}} @max={{8}} @showSpecs={{true}} @abilityType="action" />
  
    <Fs3AbilityTable @title="Background Skills" @list={{this.char.fs3.backgrounds}} @max={{3}} @abilityType="background" />  

    <Fs3AbilityTable @title="Languages" @list={{this.char.fs3.languages}} @max={{3}} @abilityType="language" />  


{{#if this.char.fs3.use_advantages}}

    <Fs3AbilityTable @title="Advantages" @list={{this.char.fs3.advantages}} @max={{3}} @abilityType="advantage" />  

{{/if}}

</div>

<div class="fs3-luck">
  <b>Luck Points:</b> {{this.char.fs3.luck_points}}
</div>

